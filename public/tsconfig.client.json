{
    "compilerOptions": {
        "target": "es2017",
        "module": "ESNext",
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "allowJs": true,
        "checkJs": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "sourceMap": true
    },
    "include": [
        "./src/**/*",
        "./pages/**/*"
    ],
    "exclude": [
        "./dist",
        "node_modules"
    ]
}